pipeline {
    agent { docker { image 'python:3.6' } }

    stages {
        stage('Build Docker') {
            steps {
                sh 'sudo docker build -t flask-app .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'sudo docker run -p 8000:8000 --name flask-app -d flask-app'
            }
        }
    }
}
